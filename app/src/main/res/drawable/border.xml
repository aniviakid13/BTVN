        android:width="1dp"
        android:color="#EFEFF4" >
    </stroke>

    <!-- các thuộc tính căn chỉnh-->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" >
    </padding>
    <corners android:radius="3dp"></corners>
</shape>